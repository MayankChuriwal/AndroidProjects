<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/android_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.android.fingerprint.MainActivity"
    android:background="@color/colorPrimary">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageFinger"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_fingerprint"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageFinger"
        android:textColor="#F5F5F5"
        android:textSize="20sp"
        android:text="Please place your finger on the scanner to verify"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

</RelativeLayout>
